<% provide(:title, @user.email) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <ul>
       <li><span> <%= @user.first_name %> <%= @user.last_name %></span></li>
        <li><%= @user.email %></li>
      </ul>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.books.any? %>
       <h3>books (<%= @user.books.count %>)</h3>
      <ol class="books">
        <%= render 'books/index' %><br>
      </ol>
    <% end %>
  </div>
</div>